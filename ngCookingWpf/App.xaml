<Application x:Class="ngCookingWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ngCookingWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="applicationStyle">
            <Setter Property="TextElement.FontFamily" Value="/ngCookingWpf;component/fonts/#Thirsty Rough One" />
            <Setter Property="TextElement.Foreground" Value="#861b09" />
        </Style>
        <Style x:Key="menuButton" TargetType="Button">
            <Setter Property="Background" Value="#dd3f25" />
        </Style>
    </Application.Resources>
</Application>
